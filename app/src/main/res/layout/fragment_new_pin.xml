<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.khanal.pinvault.NewPin">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/labels"
        android:text="@string/name_label"
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <EditText
        style="@style/values"
        android:id="@+id/name_value"
        android:layout_below="@id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        style="@style/labels"
        android:text="@string/password_label"
        android:id="@+id/password_label"
        android:layout_below="@id/name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/values"
        android:id="@+id/password_value"
        android:layout_below="@id/password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/labels"
        android:text="@string/notes_label"
        android:id="@+id/notes_label"
        android:layout_below="@id/password_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/values"
        android:id="@+id/notes_value"
        android:layout_below="@id/notes_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:layout_below="@id/notes_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom|right"
        android:background="@drawable/ic_new_pin"/>



</RelativeLayout>

